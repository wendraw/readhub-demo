<view class="page-body">
  <view class="title">{{title}}</view>

  <view class="period">昨天</view>

  <view class="content">
    {{preContent}}
    <text class="time" bindtap='subscribeReminder'>{{time}}</text>
    {{posContent}}
  </view>
</view>

<my-popup myVisible="{{popupShow}}" bindcancel="onClose" class="">
  <view class="popup-title bottom-border">
    <text style="flex:1">设置事件提醒</text>
    <mp-icon icon="close" color="gray" size="{{16}}" bindtap="onClose"></mp-icon>
  </view>
  <view class="item bottom-border">
    <text style="color: #666">事件名称</text>
    <input value="{{ eventTitle }}" />
  </view>
  <view class="item bottom-border">
    <view hover-class="timer-selector-hover-class" bindtap="onShowTimerSelector">
      <text style="color: #666">提醒时间</text>
      <view class="timer-selector" style="margin:6px 0px">
        <text style="flex:1">{{"9月20日 周日（今天）15:55"}}</text>
        <mp-icon icon="arrow" color="gray" size="{{12}}"></mp-icon>
      </view>
    </view>
  </view>
  <picker-view indicator-style="height: 50px;" value="{{value}}" hidden="{{showTimerSelector}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px;">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px;width:50px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" style="line-height: 50px;width:50px">{{item}}日</view>
    </picker-view-column>
  </picker-view>
  <button style="width:90%" type="primary">确定</button>
</my-popup>