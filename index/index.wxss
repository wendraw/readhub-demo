page {
  width: 100%;
  height: 100%;
}

.mask {
  position: fixed;
  z-index: 900;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

#my-popup {
  position: fixed;
  bottom: -1000px;
  background-color: white;
  width: 100%;
  z-index: 9999;
  border-radius: 8px 8px 0px 0px;
}

.title {
  font-size: 19px;
  font-weight: 600;
}

.period {
  color: gray;
  font-weight: 300;
  margin: 10px 0px;
  font-size: 14px;
}

.content {
  margin: 20px 0px;
  line-height: 30px;
  text-align: justify;
  font-size: 17px;
  font-weight: 300;
}

.time {
  background-image: linear-gradient(to right, #F7DAB2, #F7DAB2);
  background-position: 0 0.9em;
  background-repeat: repeat-x;
  background-size: 4px 4px;
}

.bottom-border {
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
  border-color: #ddd
}

.popup-title {
  padding: 0px 22px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-weight: 600;
  font-size: 15px;
}

.my-button {
  width: 100%;
}

.item {
  padding: 16px 20px;
}

.timer-selector-hover-class {
  background-color: rgba(245, 245, 245, 0.6)
}

.timer-column-view-day {
  line-height: 70px;
  width: 100%;
}

.timer-column-view-hour {
  line-height: 70px;
  width: 50px;
}

.timer-column-view-minute {
  line-height: 70px;
  width: 50px;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.ok-button {
  background-color: #526f91;
  height: 44px;
  margin: 20px;
  color: white;
  border-radius: 4px;
}

#timer-picker {
  margin: 12px 20px 30px 20px;
}


.item-title {
  color: #797979;
  font-size: 15px;
}

.safe-area {
  width: 100%;
  height: 68rpx;
  background: #fff;
}