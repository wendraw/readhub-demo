.wrap {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  width: 100%;
  height: 100%;
}

.mask {
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
}

.mask-show {
  opacity: 0.4;
}

.box {
  z-index: 2;
  width: 100%;
  min-height: 100px;
  background: #fff;
  border-radius: 14px 14px 0px 0px;
}